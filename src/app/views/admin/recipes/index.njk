{% extends "admin/layout.njk" %}

{% block content %}
<div class="container">
  <div class="page-header">
    <h2>Gerenciar receitas</h2>
    <a href="/admin/recipes/create" class="btn">Nova receita</a>
  </div>
  <div class="cards">
        {% for recipe in recipes %}
          {% if loop.index <= 6 %}
            <div class="card">
              <div class="card__image">
                <img src="{{recipe.image}}" alt="{{recipe.title}}">
              </div>
              <div class="card-text">
                <div class="card__title">
                  <p>{{recipe.title}}</p>
                </div>
                <div class="card__author">
                  <p>por {{ recipe.chef_name }}</p>
                </div>
                <span class="total-recipes">{{ recipe.total_recipes }} receitas</span>
                <a href="/admin/recipes/{{recipe.id}}" class="links">Visualizar</a>
              </div>
            </div>
          {% endif %}
        {%endfor%}
      </div>
</div>
{% endblock content %}