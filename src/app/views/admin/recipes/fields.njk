<div class="item">
  <div>Imagem da receita</div>
  <input type="text" name="image" value="{{ recipe.image }}">
</div>
<div class="item">
  <div>Nome da receita</div>
  <input type="text" name="title" value="{{ recipe.title }}">
</div>
<div class="item">
  <div>Chef</div>
  <select name="chef">
    <option value="" disabled selected>Selecione um chef</option>
    {% for chef in chefOptions %}
      <option value="{{ chef.id }}" 
      {% if recipe.chef_id == chef.id %} selected {% endif %}
      >{{ chef.name }}</option>
    {% endfor %}
  </select>
</div>
<div class="item">
  <div>Ingredientes</div>
  <div id="ingredients">
    {% if recipe.ingredients %}
      {% for ingredient in recipe.ingredients %}
        <div class="ingredient">
          <input type="text" name="ingredients[]" value="{{ ingredient }}">
        </div>
      {% endfor %}
    {% else %}
      <div class="ingredient">
        <input type="text" name="ingredients[]" value="">
      </div>
    {% endif %}
  </div>
  <button type="button" class="add-ingredient links">Adicionar novo ingrediente</button>
</div>
<div class="item">
  <div>Modo de preparo</div>
  <div id="preparation">
    {% if recipe.preparation %}
      {% for preparation in recipe.preparation %}
        <div class="preparation">
          <input type="text" name="preparation[]" value="{{ preparation }}">
        </div>
      {% endfor %}
    {% else %}
      <div class="preparation">
        <input type="text" name="preparation[]" value="">
      </div>
    {% endif %}
    
  </div>
  <button type="button" class="add-preparation links">Adicionar novo passo</button>
</div>
<div class="item">
  <div>Informações adicionais</div>
  <textarea name="information">{{ recipe.information }}</textarea>
</div>

<script src="/js/addFieldsButton.js"></script>